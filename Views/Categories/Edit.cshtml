@using Sklepix.Models
@model Category
@{
    ViewData["Title"] = "Edit category";
}

<button type="button" class="btn btn-success float-end">
    <a asp-action="Index" class="text-reset text-decoration-none">
        <span>Go back</span>
    </a>
</button>

<form asp-action="Edit" style="width:50%;height:50%;margin-left:25%;">
    <h2>Edit category: @Model.Name</h2>
    <br />
    <input asp-for="ID" type="hidden" value="@Model.ID" />
    <div class="form-group">
        <label asp-for="Name">
            <span>Category name</span>
        </label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Category name..." value="@Model.Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Description">
            <span>Category description</span>
        </label>
        <textarea asp-for="Description" class="form-control" placeholder="Category description..." value="@Model.Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <br />
    <input type="submit" class="form-control" value="Edit category" />
</form>